<IfModule mod_rewrite.c>
  Options -MultiViews
  RewriteEngine On

# If your app is in a subfolder, set the base to that path, e.g. /mysite/

RewriteBase /

# Serve existing files/directories as-is

RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# All other requests go to the SPA entry point

RewriteRule ^ index.html [L]
</IfModule>

# Ensure index.html is treated as the default document

DirectoryIndex index.html
